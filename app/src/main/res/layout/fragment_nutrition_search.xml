<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NutritionSearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@color/material_default">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:id="@+id/cuisineSearchTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Search By Nutrition"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_marginStart="30dp"
                    android:id="@+id/cuisineSearchSecondaryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="100dp"
                    android:text="eat healthy, live long, live strong :) "
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

            </LinearLayout>



<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="250dp"
    android:elevation="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">
    <TextView
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energy (Calories)"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <com.google.android.material.slider.RangeSlider
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/calorie_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:values="@array/rangeSliderVals"
        android:valueFrom="0.0"
        android:valueTo="1200.0"
        android:layout_marginTop="20dp"/>

</androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:elevation="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

    <TextView
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbohydrate (grams)"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <com.google.android.material.slider.RangeSlider
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/carbs_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:values="@array/rangeSliderVals"
        android:valueFrom="0.0"
        android:valueTo="200.0"
        android:layout_marginTop="20dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:elevation="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

    <TextView
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein (grams)"
        android:textStyle="bold"
        android:textSize="15sp"/>



    <com.google.android.material.slider.RangeSlider
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/protein_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:values="@array/rangeSliderVals"
        android:valueFrom="0.0"
        android:valueTo="200.0"
        android:layout_marginTop="20dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="490dp"
                android:elevation="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
    <TextView
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fats (grams)"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <com.google.android.material.slider.RangeSlider
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/fats_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:values="@array/rangeSliderVals"
        android:valueFrom="0.0"
        android:valueTo="200.0"
        android:layout_marginTop="20dp"/>
            </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_gravity="center_horizontal"
            android:text="Search"
            android:backgroundTint="@color/search_page_button"
            android:layout_marginTop="580dp"/>

        </FrameLayout>
    </ScrollView>





</FrameLayout>