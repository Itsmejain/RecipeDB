                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CardButton_contactus"
                android:layout_width="200dp"
                android:layout_height="133dp"
                android:layout_margin="10dp"
                android:elevation="50dp"
                app:cardBackgroundColor="#032673"
                app:cardCornerRadius="15dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shimla"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/contactus" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nutinosans"
                        android:gravity="center"
                        android:text="Contact Us"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <androidx.cardview.widget.CardView
                android:id="@+id/CardButton_recipeOfDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                app:cardCornerRadius="40dp"
                app:cardElevation="50dp"
                android:elevation="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/gradient"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"

                        android:text="Recipe Of The Day"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nutinosans"
                        android:gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

